<Window x:Class="FloridaLotteryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Florida Lottery App"
        ResizeMode="NoResize"
        Height="720"
        Width="1500">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <TextBlock Text="Histórico (por fecha)"
                       FontSize="20"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">

                <!-- Inputs manuales -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Pick 3:" VerticalAlignment="Center" Margin="0,0,6,0" FontWeight="Bold"/>
                    <TextBox x:Name="TxtManualP3"
                            Width="70"
                            MaxLength="3"
                            VerticalContentAlignment="Center"
                            Margin="0,0,10,0"/>

                    <TextBlock Text="Pick 4:" VerticalAlignment="Center" Margin="0,0,6,0" FontWeight="Bold"/>
                    <TextBox x:Name="TxtManualP4"
                            Width="80"
                            MaxLength="4"
                            VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Fecha para análisis -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Fecha:" VerticalAlignment="Center" Margin="0,0,6,0" FontWeight="Bold"/>
                    <DatePicker x:Name="AnalysisDatePicker"
                                Width="140"
                                VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Botones -->
                <Button Content="Análisis"
                        Padding="14,8"
                        Margin="0,0,10,0"
                        Click="Analysis_Click"/>

                <Button Content="Añadir registro"
                        Padding="14,8"
                        Margin="0,0,10,0"
                        Click="AddManual_Click"/>

                <Button Content="Buscar"
                        Padding="14,8"
                        Click="Search_Click"/>

            </StackPanel>

        </DockPanel>

        <!-- Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DayCards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="230"
                                CornerRadius="14"
                                BorderBrush="#22000000"
                                BorderThickness="1"
                                Padding="10"
                                Margin="0,0,12,12"
                                Background="#dad9d9f2">

                            <StackPanel> 

                                <!-- Mediodía -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="☀️" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Mediodía " FontWeight="Bold" FontSize="12"/>
                                    <Button Content="👁️"
                                            Padding="8,4"
                                            Margin="8,0,0,0"
                                            Visibility="{Binding P3_M_Analyzable, Converter={StaticResource BoolToVisibility}}"
                                            Click="Analysis_Midday_Click"/>
                                    <Button Content="✏️"
                                            Padding="6,4"
                                            Margin="8,0,0,0"
                                            Tag="M"
                                            IsEnabled="{Binding M_Exists}"
                                            Click="Edit_Draw_Click"/>
                                    <Button Content="🗑️"
                                            Padding="6,4"
                                            Margin="6,0,0,0"
                                            Tag="M"
                                            IsEnabled="{Binding M_Exists}"
                                            Click="Delete_Draw_Click"/>
                                </StackPanel>

                                <Grid Margin="0,6,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="28"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Pick3 -->
                                    <StackPanel Grid.Column="0">
                                    <TextBlock Text="Pick 3" Opacity="0.7" HorizontalAlignment="Center" FontSize="11"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                            <Border Width="48" Height="48" CornerRadius="24"
                                                    BorderThickness="2" BorderBrush="Black">
                                                <TextBlock Text="{Binding P3_M_Number}"
                                                        FontSize="14" FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Pick4 -->
                                    <StackPanel Grid.Column="2">
                                    <TextBlock Text="Pick 4" Opacity="0.7" HorizontalAlignment="Center" FontSize="11"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                            
                                            <Border Width="48" Height="48" CornerRadius="24"
                                                    BorderThickness="2" BorderBrush="Black">
                                                <TextBlock Text="{Binding P4_M_First2}"
                                                        FontSize="14" FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </Border>

                                            <Border Width="48" Height="48" CornerRadius="24"
                                                    BorderThickness="2" BorderBrush="Black"
                                                    Margin="8,0,0,0">
                                                <TextBlock Text="{Binding P4_M_Last2}"
                                                        FontSize="14" FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <Separator/>

                                <!-- Noche -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0">
                                    <TextBlock Text="🌙" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Noche  " FontWeight="Bold" FontSize="12"/>
                                    <Button Content="👁️"
                                        Padding="8,4"
                                        HorizontalAlignment="Right"
                                        Visibility="{Binding P3_E_Analyzable, Converter={StaticResource BoolToVisibility}}"
                                        Click="Analysis_Night_Click"/>
                                    <Button Content="✏️"
                                            Padding="6,4"
                                            Margin="8,0,0,0"
                                            Tag="E"
                                            IsEnabled="{Binding E_Exists}"
                                            Click="Edit_Draw_Click"/>
                                    <Button Content="🗑️"
                                            Padding="6,4"
                                            Margin="6,0,0,0"
                                            Tag="E"
                                            IsEnabled="{Binding E_Exists}"
                                            Click="Delete_Draw_Click"/>
                                </StackPanel>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="28"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Pick3 -->
                                    <StackPanel Grid.Column="0">
                                    <TextBlock Text="Pick 3" Opacity="0.7" HorizontalAlignment="Center" FontSize="11"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                            <Border Width="48" Height="48" CornerRadius="24"
                                                    BorderThickness="2" BorderBrush="Black">
                                                <TextBlock Text="{Binding P3_E_Number}"
                                                        FontSize="14" FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Pick4 -->
                                    <StackPanel Grid.Column="2">
                                    <TextBlock Text="Pick 4" Opacity="0.7" HorizontalAlignment="Center" FontSize="11"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                            <Border Width="48" Height="48" CornerRadius="24"
                                                    BorderThickness="2" BorderBrush="Black">
                                                <TextBlock Text="{Binding P4_E_First2}"
                                                        FontSize="14" FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </Border>

                                            <Border Width="48" Height="48" CornerRadius="24"
                                                    BorderThickness="2" BorderBrush="Black"
                                                    Margin="8,0,0,0">
                                                <TextBlock Text="{Binding P4_E_Last2}"
                                                        FontSize="14" FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                

                                <TextBlock Text="{Binding DateText}"
                                        HorizontalAlignment="Right"
                                        Opacity="0.8"
                                        FontWeight="Bold"
                                        FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>

        <!-- Pagination -->
        <DockPanel Grid.Row="2" Margin="0,10,0,0" LastChildFill="False">
            <Button Content="⟵ Anterior"
                    Padding="14,8"
                    IsEnabled="{Binding CanPrev}"
                    Click="Prev_Click"
                    DockPanel.Dock="Left"/>

            

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10,0"
                        DockPanel.Dock="Left">

                <TextBlock Text="{Binding PageText}"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       DockPanel.Dock="Left"/>        
                <TextBlock Text="Ir a página:"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"/>
                <TextBox x:Name="PageInput"
                         Width="40"
                         VerticalContentAlignment="Center"
                         KeyDown="PageInput_KeyDown"/>
                <Button Content="Siguiente ⟶"
                    Padding="14,8"
                    Margin="6,0,0,0"
                    IsEnabled="{Binding CanNext}"
                    Click="Next_Click"
                    DockPanel.Dock="Right"/>                        
            </StackPanel>           

            
        </DockPanel>
    </Grid>
</Window>
